<div class="form-group m-3 p-2">
    <label for="title">Title</label>
    <input type="text" value="<%=post.title%>" name="title" id="title" class="form-control" required>
    <label for="description">Description</label>
    <textarea  name="description"  id="description" class="form-control" required><%=post.description%></textarea>
    <label for="content">Content</label>
    <textarea  name="content" id="content" class="form-control" required><%=post.content%></textarea>
     <div class="my-4">
        <label for="illustration">Add Illustration</label>
        <input type="file" name="illustration" value="" id="illustration">
     </div>
    
</div>


<a  href="/posts" class="btn btn-secondary mx-3">Cancel</a>
<button type="submit" class="btn button">Publish</button>
