<div class="form-group">
    <label for="title">Title</label>
    <input type="text" value="<%=post.title%>" name="title" id="title" class="form-control" required>
    <label for="description">Description</label>
    <textarea  name="description" value="<%=post.title%>" id="description" class="form-control" required></textarea>
    <label for="content">Content</label>
    <textarea  name="content" id="content" value="<%=post.content%>" class="form-control" required></textarea>

    <label for="illustration">Add Illustration</label>
    <input type="file" name="illustration" value="" id="illustration">
</div>


<a href="/posts" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">publish</button>
